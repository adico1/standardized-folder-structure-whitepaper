pipeline {
    agent any

    environment {
        NODE_VERSION = '14'
    }

    stages {
        stage('Build') {
            steps {
                sh 'nvm use ${NODE_VERSION}'
                sh 'npm ci'
                sh 'npm run build'
            }
        }

        stage('Lint') {
            steps {
                sh 'npm run lint'
            }
        }

        stage('Unit Test') {
            steps {
                sh 'npm run test:unit'
            }
        }

        stage('Integration Test') {
            steps {
                sh 'npm run test:integration'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo 'Deploying to production'
                // Add your deployment steps here
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
